{
  "name": "todo-api-devops-project",
  "version": "1.0.0",
  "description": "DevOps project with Todo API, CI/CD, and cloud deployment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t todo-api .",
    "docker:run": "docker run -p 3000:3000 todo-api",
    "docker:compose": "docker-compose up -d"
  },
  "keywords": ["api", "todo", "devops", "ci-cd", "docker"],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.4",
    "joi": "^17.9.2",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}